<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_list.BookListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBookList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="@dimen/margin_6dp"
        android:paddingTop="@dimen/margin_recylerview"
        android:paddingEnd="@dimen/margin_6dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="@integer/span_count"
        tools:listitem="@layout/book_list_item" />
</FrameLayout>